{
    "name": "akahori01/akahori-rice",
    "description": "rice-site",
    "version": "1.0.0",
    "require": {
        "php": "^8.2",
        "ext-mysqli": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'upload_max_filesize = 7M' > .heroku/php/etc/php/conf.d/custom.ini",
            "echo 'post_max_size = 10M' >> .heroku/php/etc/php/conf.d/custom.ini"
        ]
    }
}